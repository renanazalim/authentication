{
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "airbnb",
      "airbnb/hooks",
      "airbnb-typescript",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "project": "tsconfig.json"
    },
    "plugins": ["@typescript-eslint", "jest", "prettier"],
    "rules": {
      "import/prefer-default-export": "off",
      "import/first": "off",
      "import/order": "off",
      "no-continue": "off",
      "no-param-reassign": ["error", { "props": false }],
      "@typescript-eslint/comma-dangle": [
        "error",
        {
          "imports": "never",
          "exports": "never",
          "objects": "never",
          "functions": "never"
        }
      ]
    }
  }
  